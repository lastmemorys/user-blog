<div>
  <% @blog.tags.build %>
  <%= form_for @blog do |f| %>
      <%= f.label "标题" %>
      <%= f.text_field :title %>
      <%= f.label "内容" %>
      <%= f.text_field :content %>
      <%= render :partial => "tags/form",
                 :locals => {:form => f}
      %>

      <%= f.submit "提交" %>
  <% end %>
</div>